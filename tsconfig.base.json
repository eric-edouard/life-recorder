{
	"compilerOptions": {
		// From Expo
		"allowJs": true,
		"esModuleInterop": true,
		"jsx": "react-native",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "node",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ESNext",

		// Monorepo stuff
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@app/*": ["app/src/*"],
			"@backend/*": ["backend/src/*"],
			"@shared/*": ["shared/*"]
		}
	}
}
