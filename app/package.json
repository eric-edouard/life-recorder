{
  "name": "life-recorder",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "sync-shared": "cp -r ../shared/* src/shared/ && cp -r ../shared/* ../backend/src/shared/",
    "watch-shared": "nodemon --watch ../shared --ext '*' --exec 'npm run sync-shared'",
    "prebuild:dev": "APP_VARIANT=development npm run sync-shared && npx expo prebuild --platform ios --clean",
    "prebuild": "npm run sync-shared && npx expo prebuild --platform ios --clean",
    "start": "APP_VARIANT=development npm-run-all --parallel watch-shared expo-start",
    "expo-start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios --device",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "lint": "biome check . --formatter-enabled=true --linter-enabled=true --organize-imports-enabled=true --diagnostic-level error --write",
    "typecheck": "tsc --project tsconfig.json --noEmit --pretty"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/ui": "~0.1.1-alpha.1",
