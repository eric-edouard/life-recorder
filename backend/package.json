{
	"name": "backend",
	"version": "1.0.0",
	"description": "Backend API server",
	"main": "dist/backend/src/index.js",
	"scripts": {
		"postinstall": "npm run install-resemblyzer",
		"build": "tsc && tsc-alias && mkdir -p dist/backend/resemblyzer && cp resemblyzer/*.py resemblyzer/requirements.txt dist/backend/resemblyzer/",
		"install-resemblyzer": "cd resemblyzer && python3 -m pip install -r requirements.txt && cd ..",
		"install-resemblyzer:railway": "python3 -m venv /opt/venv && /opt/venv/bin/pip install --upgrade pip && /opt/venv/bin/pip install --no-cache-dir --extra-index-url https://download.pytorch.org/whl/cpu -r dist/backend/resemblyzer/requirements.txt",
		"start": "node dist/backend/src/index.js",
		"dev": "npm run install-resemblyzer && concurrently \"tsx scripts/tunnel.js\" \"tsx watch -r tsconfig-paths/register src/index.ts\"",
		"lint": "biome check . --formatter-enabled=true --linter-enabled=true --organize-imports-enabled=true --diagnostic-level error --write",
		"typecheck": "tsc --noEmit",
		"check": "npm run lint && npm run typecheck",
		"db:drop": "drizzle-kit drop",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"dependencies": {
		"@better-auth/expo": "^1.2.7",
		"@deepgram/sdk": "^3.11.3",
		"@discordjs/opus": "^0.10.0",
		"@ericedouard/vad-node-realtime": "^0.2.0",
		"@google-cloud/storage": "^7.16.0",
		"@trpc/server": "^11.1.1",
		"@types/cors": "^2.8.17",
		"@types/socket.io": "^3.0.2",
		"better-auth": "^1.2.7",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.41.0",
		"express": "^5.1.0",
		"ffmpeg-static": "^5.2.0",
		"fix-esm": "^1.0.1",
		"pg": "^8.14.1",
		"socket.io": "^4.8.1",
		"superjson": "^2.2.2",
		"trpc-to-openapi": "^2.2.0",
		"wavefile": "^11.0.0",
		"zod": "^4.0.0-beta.20250424T163858"
	},
	"devDependencies": {
		"@babel/core": "^7.26.10",
		"@better-auth/cli": "^1.2.7",
		"@biomejs/biome": "^1.9.4",
		"@types/express": "^4.17.21",
		"@types/node": "^20.17.30",
		"@types/pg": "^8.11.12",
		"concurrently": "^9.1.2",
		"drizzle-kit": "^0.30.6",
		"ngrok": "^5.0.0-beta.2",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.15",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.19.3",
		"typescript": "^5.3.3"
	}
}
