{
	"name": "backend",
	"version": "1.0.0",
	"description": "Backend API server",
	"main": "dist/index.js",
	"_moduleAliases": {
		"@": "dist"
	},
	"scripts": {
		"prebuild": "cp -r ../shared/* src/shared/",
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "tsx -r tsconfig-paths/register src/index.ts",
		"lint": "biome check . --formatter-enabled=true --linter-enabled=true --organize-imports-enabled=true --diagnostic-level error --write",
		"typecheck": "tsc --noEmit",
		"check": "npm run lint && npm run typecheck",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"dependencies": {
		"@deepgram/sdk": "^3.11.3",
		"@discordjs/opus": "^0.10.0",
		"@ericedouard/vad-node-realtime": "^0.1.2",
		"@google-cloud/storage": "^7.16.0",
		"@types/cors": "^2.8.17",
		"@types/socket.io": "^3.0.2",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.41.0",
		"express": "^4.18.2",
		"ffmpeg-static": "^5.2.0",
		"module-alias": "^2.2.3",
		"pg": "^8.14.1",
		"socket.io": "^4.8.1",
		"wavefile": "^11.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/express": "^4.17.21",
		"@types/node": "^20.17.30",
		"@types/pg": "^8.11.12",
		"drizzle-kit": "^0.30.6",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.19.3",
		"typescript": "^5.3.3"
	}
}
