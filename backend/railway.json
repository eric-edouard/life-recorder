{
	"$schema": "https://railway.com/railway.schema.json",
	"build": {
		"builder": "NIXPACKS",
		"buildCommand": "cd backend && npm install && npm run build",
		"watchPatterns": ["backend/**"],
		"nixpacksPlan": {
			"providers": ["node"]
		}
	},
	"deploy": {
		"startCommand": "cd backend && npm run start",
		"healthcheckPath": "/health"
	}
}
